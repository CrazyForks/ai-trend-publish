{
  "tasks": {
    "start": "deno run --watch --allow-env --allow-ffi --allow-read --allow-sys --allow-net src/index.ts",
    "test": "deno run --allow-env --allow-ffi --allow-read  --allow-sys --allow-net src/test.ts",
    "build": "deno compile --allow-env --allow-ffi --allow-read --allow-sys --allow-net  --target x86_64-pc-windows-msvc --output trendFinder.exe --icon ./docs/images/main.ico src/test.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@src/": "./src/"
  },
  "exclude": [
    "node_modules", 
    "dist", 
    "build", 
    "public", 
    "**/*.ejs"
  ],
  "lint": {
    "exclude": [
      "src/templates"
    ]
  }
}
